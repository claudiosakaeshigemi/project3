<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/azul_cinzento"
        tools:context="com.example.claud.projeto3.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_n"
                android:id="@+id/imageView"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz "
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="45sp"
                />
        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Nome"
            android:id="@+id/edit_text_nome"
            android:background="@android:color/white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="O mascote de bobby é um(a):"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal"
            >

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fada"
                    android:onClick="RadioMascote"
                    android:id="@+id/radio_fada"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unicórnio"
                    android:onClick="RadioMascote"
                    android:id="@+id/radio_unicornio"
                    />


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dragão"
                    android:onClick="RadioMascote"
                    android:id="@+id/radio_dragao"
                    />

            </RadioGroup>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quem na série foi nomeado(a) um Bárbaro?E quem é nomeado(a) Acrobata?"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:id="@+id/txt_perguntaEscolha"
            android:layout_marginTop="10dp"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eric e Hank"
                android:onClick="nome"
                android:id="@+id/radio_eric_e_diana"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eric e Presto"
                android:onClick="nome"
                android:id="@+id/radio_eric_e_presto"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bobby e Diana"
                android:onClick="nome"
                android:id="@+id/radio_bobby_e_diana"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diana e Sheila"
                android:onClick="nome"
                android:id="@+id/radio_diana_e_sheila"
                />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Qual era o poder da arma mágica de Sheila ? "
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_margin="10dp"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deixar ela mais forte."
                android:onClick="armaMagica"
                android:id="@+id/radio_forte"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deixar ela mais rápida."
                android:onClick="armaMagica"
                android:id="@+id/radio_rapida"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deixar ela mais inteligente."
                android:onClick="armaMagica"
                android:id="@+id/radio_inteligente"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deixar ela invisível."
                android:onClick="armaMagica"
                android:id="@+id/radio_invisivel"
                />

        </RadioGroup>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Qual(is) personagem(s) era o seu favorito?"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            />


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_hank"
            android:text="Hank"
            />


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_eric"
            android:text="Eric"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_diana"
            android:text="Diana"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_sheila"
            android:text="Sheila"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_presto"
            android:text="Presto"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_bobby"
            android:text="Bobby"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  "
            android:id="@+id/txt_resposta"
            android:layout_marginTop="16dp"
            android:layout_margin="20dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:textColor="@android:color/black"
                android:background="@android:color/background_light"
                android:onClick="validar"
                android:layout_gravity="center_horizontal"
                />
        </RelativeLayout>


    </LinearLayout>


</ScrollView>
